<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Category:"
                android:layout_margin="@dimen/_3sdp"
                android:textStyle="bold"
                android:id="@+id/category"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toRightOf="@+id/category"
                android:id="@+id/category_type"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Description:"
                android:layout_margin="@dimen/_3sdp"
                android:textStyle="bold"
                android:layout_below="@+id/category_type"
                android:id="@+id/Description_t"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/description_type"
                android:layout_margin="@dimen/_3sdp"
                android:layout_below="@+id/Description_t"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/status"
                android:layout_below="@+id/description_type"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Status:"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toRightOf="@+id/status"
                android:id="@+id/status_type"
                android:layout_below="@+id/description_type"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/view"
                android:layout_below="@+id/status_type"
                android:background="#AB141414" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Complaint ID: "
                android:textColor="#FF5722"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/request"
                android:layout_below="@+id/view"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="2345"
                android:textColor="#FF5722"
                android:id="@+id/requestID"
                android:layout_below="@+id/view"
                android:layout_toRightOf="@+id/request"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_margin="@dimen/_3sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Date:"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/date_t"
                android:layout_below="@+id/request"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="12-234-3r"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/date"
                android:layout_below="@+id/request"
                android:layout_toRightOf="@+id/date_t"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>